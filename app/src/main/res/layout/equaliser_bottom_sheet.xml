    <RelativeLayout
        android:id="@+id/equaliser_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/equaliser_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"
            android:fontFamily="sans-serif"
            android:text="Equalizer"
            android:textColor="@color/tab_highlight"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/switchEqualizer"
            android:text="Enable"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchEqualizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:text=""
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:textOff=""
            android:textOn=""
            android:theme="@style/SCBSwitch" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/presets_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/equaliser_top_layout"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="18dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/presets_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Presets"
            android:textColor="@color/infoActLightGrey"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spinner_eq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/presets_txt"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:popupBackground="@color/white"
            android:spinnerMode="dropdown"
            android:theme="@style/Spinner" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/preamp_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
