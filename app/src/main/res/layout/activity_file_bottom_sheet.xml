<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetContainer_browse_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_rounded"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:text="Name"
        android:textColor="@color/tab_highlight"
        android:textSize="18sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/option1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_ripple_add_to_playlist"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/play_img"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/ic_play_rounded"
            app:tint="@color/folder_color" />

        <TextView
            android:id="@+id/play_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="Play"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/option2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_ripple_add_to_playlist"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/add_to_playlist_img"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/ic_baseline_playlist_add_24"
            app:tint="@color/folder_color" />

        <TextView
            android:id="@+id/add_to_playlist_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="Add this folder and subfolders"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/option3"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_ripple_add_to_playlist"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/add_to_fav_img"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/ic_baseline_star_rate"
            app:tint="@color/folder_color" />

        <TextView
            android:id="@+id/add_to_fav_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="Add to favorites"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/option4"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_ripple_add_to_playlist"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/delete_img"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/ic_baseline_delete"
            app:tint="@color/folder_color" />

        <TextView
            android:id="@+id/delete_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="Delete"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </LinearLayout>

</LinearLayout>