<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetContainer_browse_fragment"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bottom_sheet_rounded"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/folder_name_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Folder Name"
        android:textColor="@color/tab_highlight"
        android:textStyle="normal"
        android:textSize="18sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/option1"
        android:background="@drawable/custom_ripple_add_to_playlist"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:gravity="center">

        <ImageView
            android:id="@+id/fav_marker_bottom_sheet_browse_fragment"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_baseline_star_border"
            app:tint="@color/folder_color" />

        <TextView
            android:id="@+id/text_bottom_frag_browse_fragment"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="Remove from favourites"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

</LinearLayout>