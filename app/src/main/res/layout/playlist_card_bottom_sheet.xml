<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetContainer_browse_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_rounded"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="Name"
        android:textColor="@color/tab_highlight"
        android:textSize="18sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/option1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_ripple_add_to_playlist"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/play_img"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_play_rounded"
            app:tint="@color/folder_color" />

        <TextView
            android:id="@+id/play_txt"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="Play"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/option2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_ripple_add_to_playlist"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">


        <ImageView
            android:id="@+id/append_img"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_play_with_plus"
            app:tint="@color/folder_color" />

        <TextView
            android:id="@+id/append_txt"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="Append"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/option3"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_ripple_add_to_playlist"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/shuffle_img"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_shuffle_off"
            app:tint="@color/folder_color" />

        <TextView
            android:id="@+id/shuffle_txt"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="Shuffle"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/option4"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_ripple_add_to_playlist"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/info_img"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_baseline_info"
            app:tint="@color/folder_color" />

        <TextView
            android:id="@+id/info_txt"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="Information"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/option5"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_ripple_add_to_playlist"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/insert_nxt_img"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_play_with_next"
            app:tint="@color/folder_color" />

        <TextView
            android:id="@+id/insert_nxt_txt"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="Insert next"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/option6"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_ripple_add_to_playlist"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/add_to_playlist_img"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_baseline_playlist_add_24"
            app:tint="@color/folder_color" />

        <TextView
            android:id="@+id/add_to_playlist_txt"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="Add to playlist"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/option7"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_ripple_add_to_playlist"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/delete_img"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/ic_baseline_delete"
            app:tint="@color/folder_color" />

        <TextView
            android:id="@+id/delete_txt"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="Delete"/>


    </LinearLayout>
</LinearLayout>