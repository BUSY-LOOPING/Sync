<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView android:layout_width="match_parent"
    android:id="@+id/nestedScrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#111111">

<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServerFragment"
    android:background="#111111">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/top_layout">

        <ImageView
            android:id="@+id/pasteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/ic_paste" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="58dp"
            android:layout_gravity="center_vertical"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="#2196F3"
            app:hintTextColor="@color/colorAccent"
            app:hintEnabled="true"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            android:textColorHint="#63FFFFFF"
            app:boxCornerRadiusTopStart="10dp"
            android:layout_centerHorizontal="true">

<!--            app:hintTextColor is the color of the hint on top of the box
textColorHint is the color of hint inside default box-->

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/enteredURL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter the URL"
                android:textCursorDrawable="@color/colorAccent"
                android:textSize="14sp"
                android:fontFamily="@font/helvetica"
                android:textColor="@color/colorAccent"
                android:gravity="center_horizontal|center_vertical"
                android:singleLine="true"/>

        </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/searchBtn"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/ic_search"
        android:layout_alignParentRight="true" />

    </RelativeLayout>

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/exoPlayerView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@id/top_layout"
        android:layout_marginTop="25dp" />

</RelativeLayout>

</androidx.core.widget.NestedScrollView>





